<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pesitbsc.meghajit.sinchan" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".TitleScreen"
            android:label="@string/title_activity_title_screen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LogIn"
            android:label="@string/title_activity_log_in" >
            <intent-filter>
                <action android:name="com.pesitbsc.meghajit.sinchan.Login" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StudentLogin"
            android:label="@string/title_activity_student_login" >
            <intent-filter>
                <action android:name="com.pesitbsc.meghajit.sinchan.StudentLogin" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FacultyLogin"
            android:label="@string/title_activity_faculty_login" >
            <intent-filter>
                <action android:name="com.pesitbsc.meghajit.sinchan.FacultyLogin" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".StudentDetails"
            android:label="@string/title_activity_student_details" >

            <intent-filter>
                <action android:name="com.pesitbsc.meghajit.sinchan.StudentDetails" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
